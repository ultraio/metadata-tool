{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/*"]
        },
        "declaration": true,
        "strict": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./test/**/*"]
}
